/* RESET */
/********************************************************************************************************************/
html,body,div,ul,ol,li,h1,h2,h3,h4,h5,h6,form,fieldset,input,p,th,td{margin:0;padding:0;}
img,body,html{border:0}
th {font-style:normal;font-weight:normal;text-align:left;}
ol,ul {list-style:none;}
h1,h2,h3,h4,h5,h6{font-size:100%;}
body, html {margin: 0; height: 100%}

/* TABS */
/********************************************************************************************************************/
.ui-tabs-hide {display: none}
.tab-body {font-size: 12px; line-height: 16px; font-family: Arial,serif; color: #434343}
#tabs {background: url(<%= asset_path "sprite.png" %>) repeat-x scroll 0 -490px #EEEEEE; height: 30px; padding: 10px 10px 0}
#tabs a {background: none repeat scroll 0 0 #E4E4E4; border: 1px solid #DDDDDD; border-bottom-width: 0;
border-radius: 3px 3px 0 0; color: #999999; cursor: pointer; float: left; font-weight: bold; padding: 4px 20px 4px 9px;
position: relative; text-decoration: none; font: 13px/20px "Helvetica Neue",Helvetica}
#tabs .ui-tabs-selected a {background: none repeat scroll 0 0 #F8F8F8; border-color: #CCCCCC; color: #434343;
padding-bottom: 5px;}

/* TIPSY */
/********************************************************************************************************************/
.tipsy { padding: 5px; font-size: 12px; font-family: Arial, serif; opacity: 0.85; filter: alpha(opacity=85);
background: url(<%= asset_path("tipsy.gif") %>) no-repeat}
.tipsy-inner { padding: 5px 8px 4px 8px; background-color: black; color: white; max-width: 200px; text-align: center; }
.tipsy-inner { -moz-border-radius:3px; -webkit-border-radius:3px; }
.tipsy-north { background-position: top center; }
.tipsy-south { background-position: bottom center; }
.tipsy-east { background-position: right center; }
.tipsy-west { background-position: left center; }

/* TAB: CATEGORIES */
/********************************************************************************************************************/
#categories .list-of-categories {overflow-y: scroll; height: 635px; padding-top: 5px}
#categories .list-of-categories li {padding:  5px 15px; margin-top: 0}
#categories .list-of-categories li img {height: 20px; position: relative; top: 3px}
#categories .list-of-categories li a {position: relative; top: -3px; font-weight: normal ! important; margin-left: 5px}
#categories .list-of-locations {overflow-y: scroll; max-height: 540px; padding-top: 5px}
#categories .list-of-locations .content li {line-height: 20px; margin-top: 0! important}
#categories .list-of-locations .content li a {color: inherit; text-decoration: none; border-bottom: 1px dotted #777}
#categories .list-of-locations h1 {margin-top: 20px}
#categories .actions {text-align: right; margin-top: 5px}
#categories .actions a {text-decoration: none; font-weight: bold; color: #434343; margin-right: 15px}
#categories .list-of-categories li a {font-weight: bold; color: #434343; text-decoration: none}
#categories .info {padding: 5px 10px; display: none}

/* UI: info  */
/********************************************************************************************************************/
.ui-info .container .top {margin-top: 15px}
.ui-info .container .clear {margin-bottom: 20px}
.ui-info .container {padding: 20px; border: 1px dotted #434343}
.ui-info .container img {float: left; margin-right: 20px}
.ui-info .container {background-color: white}
.ui-info .location-details {padding: 15px}
.ui-info  h2 {margin-top: 5px}
.ui-info .actions {text-align: right; margin-top: 5px}
.ui-info .actions a {text-decoration: none; font-weight: bold; color: #434343; margin-right: 15px}

/* UI: driving-directions  */
/********************************************************************************************************************/
.ui-driving-directions li span {position: relative; top: -14px}
.ui-driving-directions li.route-endpoint {padding-left: 10px; height: 25px}
.ui-driving-directions li.route-endpoint img {margin-right: 9px; }
.ui-driving-directions li.route-endpoint span {position: relative; top: -4px; font-weight: bold}

/* TAB: ROUTING */
/********************************************************************************************************************/
#routing ul {max-height: 450px; overflow-y: scroll; display: none; margin-bottom: 10px}
#routing .ui-driving-directions {height: 500px; max-height: 500px}

/* HEADER */
/********************************************************************************************************************/
#header {height: 50px; background-color: #212121; color: white; padding: 10px 5px 5px ;box-shadow: 0 0 10px #555;}
#header ul li {float: left; margin-left: 35px; margin-top: 28px}
#header ul li a {font-family: Arial,serif; font-size: 13px; color: #bbb; font-weight: 700; text-decoration: none}
#header ul li a:hover {color: white}
#header ul {display: inline}
#header #logo {float: left}

/* OTHERS */
/********************************************************************************************************************/
#wrapper {background-color: #F8F8F8; box-shadow: 0 0 10px #999999;}
body {background: url(<%= asset_path("all_bg.jpg") %>)  repeat fixed 50% 0 transparent}
#actions {background-color: #F8F8F8; width: 410px; float: right; border-left: 1px solid #555}
#map {background-color: white; height: 100%; margin-right:410px; width: auto}
#canvas {height: 680px; width: 100%; float: left; margin-right: -411px}
hr {border-bottom: 1px solid #aaa; margin-bottom: 10px}
.clear {clear: both}

.odd {background-color: #efefef}
.even {background-color: #fefefe}

ul.listing {overflow-y: scroll}
ul.listing li {padding-top: 5px}
ul.listing li a {font-weight: bold; color: #434343; text-decoration: none}
ul.listing li .numbering span {font-weight: bold; color: white; background-color: #434343; font-size: 10px; position: relative; top: 2px; padding:  2px 4px; border:  1px solid white}
ul.listing li .print {margin-right: 10px; float: right}
ul.listing li .print img {height: 14px}
ul.listing li .details {margin-right: 10px; float: right}
ul.listing li .details img {height: 10px}
ul.listing li span {font-size: 11px}
.search {padding:  10px}
.search input[type='text'] {font-style: normal; padding: 6px; width: 285px; border: 1px solid #ccc; color: #434343}
.search input[type='text'].watermark {color: #ddd; font-style: italic}
.search input[type='submit'] {padding: 5px; border: 1px solid #ccc; cursor: pointer}
.info {font-size: 11px; border: 1px solid hsl(120,20%, 80%); background-color: hsl(120,20%, 90%)}
